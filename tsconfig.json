{
    "compilerOptions": {
        "alwaysStrict": true,
        "moduleResolution": "node",
        "outDir": "js",
        "noImplicitAny": true,
        "pretty": true,
        "rootDir": ".",
        "strictFunctionTypes": true,
        "target": "es2020",
        "types": ["node"],
        "typeRoots": ["/node_modules/@types", "/node_modules/devtools-protocol"]
    },
    "exclude": [
        "js",
        "lib/ws-es6",
        "**/node_modules",
        "**/.*/"
    ],
    "include": [
        "**/*.ts"
    ]
}